{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Terrain Modeler",
  "version": "0.1.0",
  "identifier": "com.terrainmodeler.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Terrain Modeler",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "macOS": {
      "minimumSystemVersion": "12.0"
    },
    "externalBin": ["binaries/terrain-modeler-backend"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBLIC_KEY",
      "endpoints": [
        "https://releases.yourapp.com/update/{{target}}/{{current_version}}"
      ]
    }
  }
}
